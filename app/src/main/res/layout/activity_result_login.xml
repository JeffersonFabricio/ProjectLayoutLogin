<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtViewResultLoginHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/txtView_your_login"
        android:textSize="25dp"
        android:hint="@string/txtView_your_login"/>

    <TextView
        android:id="@+id/txtViewResultLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtViewResultLoginHello"
        android:textSize="25dp"
        android:contentDescription="@string/txtView_here_is_your_login"
        android:hint="@string/txtView_here_is_your_login" />

    <TextView
        android:id="@+id/txtViewResultLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewResultLoginHello"
        android:textSize="25dp"
        android:text="@string/txtView_this_is_your_password"
        android:hint="@string/txtView_this_is_your_password" />

    <TextView
        android:id="@+id/txtViewResultPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewResultLogin"
        android:textSize="25dp"
        android:layout_toRightOf="@id/txtViewResultLoginPassword"
        android:text="@string/txtView_password" />

</RelativeLayout>